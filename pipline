pipeline {
    agent any
    tools{
        jdk 'java_8'
    }

    stages {
        stage('git') {
            steps {
                echo 'scm'
				git branch: 'main', url: 'https://github.com/devopstraininghub/mindcircuit-facebook.git'
            }
        }
		
		stage('sonar') {
            steps {
                echo 'scanning project'
			             sh 'mvn sonar:sonar'
            }
        }
		
		stage('build') {
            steps {
                echo 'generating artifact using maven build tool'
			    sh 'mvn clean install'
            }
        }
		
		stage('nexus artifactory') {
            steps {
                echo 'publish to nexus'
			    sh 'mvn  deploy'
            }
        }
		stage('deploy to tomcat') {
            steps {
                echo 'tomcat deploy'
			    deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://3.141.5.28:8096/')], contextPath: 'Ashok-realtime-proj', war: '**/*.war'
            }
        }
    }
}
